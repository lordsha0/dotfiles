background-alt = #00FFFFFF
foreground = #EAE0D5
foreground-alt = #161616
;primary = #E616E6
primary = #AB80EC
secondary = #FFCB47
alert = #bd2c40

[bar/master]
;monitor = ${env:MONITOR:HDMI-1}
width = 56%
height = 30
offset-x = 22%
offset-y = 10
radius = 16
fixed-center = false

modules-left = bspwm
modules-right = filesystem memory cpu
modules-center = date

;background = #CC00283D
